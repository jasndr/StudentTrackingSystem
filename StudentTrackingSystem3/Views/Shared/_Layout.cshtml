<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="shortcut icon" type="image/png" href="~/Logo_cim-01.png" />
    <title>@ViewBag.Title - Student Tracking System</title>
    @Styles.Render("~/Content/css")
    @Styles.Render("~/Content/themes/base/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top navigation-entire">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("JABSOM Clinical Research Graduate Program System", "Index", "Home", new { area = "" }, new { @class = "navbar-brand" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Report", "Report", "Student", null, null)</li>
                    @*<li>@Html.ActionLink("Home", "Index", "Home")</li>
                        <li>@Html.ActionLink("Current Students", "Index", "Student")</li>
                        <li>@Html.ActionLink("Former Students", "Former", "Student")</li>
                        <li>@Html.ActionLink("Student Coursework", "Index", "Coursework")</li>
                          <li>@Html.ActionLink("About", "About", "Home")</li>
                          <li>@Html.ActionLink("Contact", "Contact", "Home")</li>*@
                </ul>
                @Html.Partial("_LoginPartial")
            </div>
        </div>
    </div>

    <div class="bothSides">
        <div class="leftSide" id="leftSide">
            @Html.Partial("_CF-Sidebar")
        </div>

        <div class="body-content container rightSide" id="rightSide">

            @RenderBody()
            <hr />
            <footer>
                <p>&copy; @DateTime.Now.Year &mdash; Department of Complementary &amp; Integrative Medicine &ndash; University of Hawaii John A. Burns School of Medicine</p>
            </footer>

        </div>

    </div>

    @{

    }
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/jqueryui")
    @Scripts.Render("~/bundles/datepicker")
    @Scripts.Render("~/bundles/Javascript")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)

</body>
</html>
