        <div class="row">

            @{ IQueryable<G_File> studentASFs = ViewBag.StudentFiles;}
            @{ if (!object.ReferenceEquals(studentASFs.Where(g=>g.FileType == G_FileType.ActivitySummaryFile).FirstOrDefault(), null)) {

                    foreach(var file in studentASFs)
                    {
                        if (file.FileType == G_FileType.ActivitySummaryFile)
                        {
                            <p>&bull; <a href="~/File?id=@file.G_FileId">@file.FileName</a>  &mdash;
                               @Html.ActionLink("Edit", "Edit", "Activity", new {id = file.G_FileId }, new {@class="btn btn-xs navbuttons", @style="background-color: #060; color: #FFF" })
                            </p>
                        }
                    }

                }
                else
                {
                    <p>@Html.ActionLink("Add Activity Summary File", "Create", "Activity", new {id = ViewBag.StudentID }, null)</p>
                }
            }

        </div>

    </div>

  

